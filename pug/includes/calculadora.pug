mixin cuerpoCalculadora
    form.form-horizontal
        .form-group.form-group-lg.text-justify
            label.control-label.col-xs-12.col-sm-4.col-md-3.col-lg-3(for="resultado") Resultado
            .col-xs-12.col-sm-8.col-md-9.col-lg-9
                input.form-control.input-lg(type="number", id="resultado", style="text-align:right;", disabled, value=0)
        .form-group.form-group-lg.text-justify
            label.control-label.col-xs-12.col-sm-4.col-md-3.col-lg-3(for="resultado") Ultima operacion
            .col-xs-12.col-sm-8.col-md-9.col-lg-9
                input.form-control.input-lg(type="number", id="resultado", placeholder="Ultima operacion", style="text-align:center;", disabled)
        .form-group.form-group-lg.text-justify
            label.control-label.col-xs-12.col-sm-4.col-md-3.col-lg-3(for="valor") Valor
            .col-xs-12.col-sm-8.col-md-9.col-lg-9
                input.form-control.input-lg(type="number", id="valor", placeholder="Ingrese nuevo valor", style="text-align:right;")
    .col-xs-6.col-sm-4.col-md-3.col-lg-3
        button.btn.btn-primary.btn-lg(type="button") Sumar
    .col-xs-6.col-sm-4.col-md-3.col-lg-3
        button.btn.btn-info.btn-lg(type="button") Restar
    .visible-xs-block.text-white.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        br
    .col-xs-6.col-sm-4.col-md-3.col-lg-3
        button.btn.btn-warning.btn-lg(type="button") Multiplicar
    .visible-sm-block.text-white.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        br
    .col-xs-6.col-sm-4.col-md-3.col-lg-3
        button.btn.btn-success.btn-lg(type="button") Dividir
